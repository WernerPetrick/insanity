<div class="container">

  <h3>Create new Post</h3>

  <%= form_with url: sanity_posts_path, local: true, method: :post do |form| %>
  <div>
    <%= form.label :title %>
    <br>
    <%= form.text_field :title %>
  </div>
  
  <br>
  
  <div>
    <%= form.label :slug %>
    <br>
    <%= form.text_field :slug %>
  </div>
  
  <br>

  <div>
    <%= form.label :body %>
    <br>
    <%= text_area_tag :body, nil, rows: 5 %>
  </div>

  <div>
    <%= form.submit "Create Post" %>
  </div>
<% end %>

<%= link_to 'Back to posts', root_path %>

</div>
